Question 4:
#include <stdio.h>

void recureWorld(int n);

int main(int argc, char ** argv){

	if(argc < 2){
		printf("Invalid number of arguments.\n");
	}
	else if(argc == 2){
		recureWorld(atoi(argv[1]));
	}
	else{
		recureWorld(atoi(argv[1]));
		printf("Additional arguments unused.");
	}

	return 0;
}

void recureWorld(int n){
	if(n > 1){
		recureWorld(n -1);
		printf("Hello, World!\n");
	}
	else if(n == 1){
		printf("Hello, World!\n");
	}
}


